<LiveActionBar>:
    rows : 1
    canvas.before :
        Color:
            rgb : (0, 0, 0)
        Rectangle:
            size : self.size
            pos : self.pos
    
    BoxLayout :
        id : capture_image_box
        ImageButton:
            id : capture_image_button
            source : 'images/capturenormal.png'
            size_hint : (1, 0.8)
            pos_hint : {'center_x' : 0.5, 'center_y' : 0.5}
            on_press : root.button_press_callback(self)
            on_release : root.button_release_callback(self)
    
    BoxLayout:
        id : stop_stream_box
        ImageButton:
            id : stop_stream_icon
            source : 'images/stopstream.png'
            mipmap : True
            size_hint : (1, 0.8)
            pos_hint : {'center_x' : 0.5, 'center_y' : 0.5}
            on_press : root.button_press_callback(self)
            on_release : root.button_release_callback(self)

    BoxLayout:
        id : centering_box
        ImageButton:
            id : centering_actionbar_icon
            source : 'images/centering_normal.png'
            size_hint : (1, 0.8)
            pos_hint : {'center_x' : 0.5, 'center_y' : 0.5}
            #on_touch_down: root.button_touch_action(*args)
            on_press : root.button_press_callback(self)
            on_release : root.button_release_callback(self)

    BoxLayout:
        id : light_box
        ImageToggle:
            id : light_icon_button
            source : 'images/light_normal.png'
            mimpap : True
            size_hint : (1, 0.8)
            pos_hint : {'center_x' : 0.5, 'center_y' : 0.5}
            on_state : root.toggle_press_callback(self)

    BoxLayout :
        id : speaker_icon_box
        ImageToggle:
            id : speaker_icon_button
            source : 'images/speaker_normal.png'
            size_hint : (1, 0.8)
            pos_hint : {'center_x' : 0.5, 'center_y' : 0.5}
            on_state : root.toggle_press_callback(self)

    BoxLayout :
        id : mic_icon_box
        ImageToggle:
            id : mic_icon_button
            source : 'images/mic_normal.png'
            size_hint : (1, 0.8)
            pos_hint : {'center_x' : 0.5, 'center_y' : 0.5}
            on_state : root.toggle_press_callback(self)